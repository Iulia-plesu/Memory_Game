<Window x:Class="MAP_Game.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In" Height="350" Width="450" ResizeMode="NoResize">

    <Grid Margin="10">
        <!-- Define Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title (Centered in the first row) -->
        <TextBlock Text="Welcome! Enjoy this game!" FontSize="16" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,5,0,0"/>

        <!-- User List (First Column) -->
        <ListBox ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" DisplayMemberPath="Username"
                 Height="140" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="40,35,0,0"/>

        <!-- User Image and Two Buttons (Second Column) -->
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Margin="0,30,0,0">
            <Image Width="100" Height="100">
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Source" Value="{Binding SelectedUser.DisplayImagePath}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedUser}" Value="{x:Null}">
                                <Setter Property="Source" Value="pack://application:,,,/Assets/image1.png" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>

            <!-- Two Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="←" Width="30" Height="25" Margin="5"/>
                <Button Content="→" Width="30" Height="25" Margin="5"/>
            </StackPanel>
        </StackPanel>

        <!-- Navigation Buttons (Centered at the bottom) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="2" Margin="0,30,0,0">
            <Button Content="New User" Command="{Binding AddUserCommand}" Width="80" Height="30" Margin="5"/>
            <Button Content="Delete User" Command="{Binding DeleteCommand}" Width="80" Height="30" Margin="5"/>
            <Button Content="Play" Command="{Binding PlayCommand}" Width="80" Height="30" Margin="5"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
