<Window x:Class="MAP_Game.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In" Height="350" Width="450" ResizeMode="NoResize">

    <Grid Margin="10">
        <!-- Title -->
        <TextBlock Text="Welcome! Enjoy this game!" FontSize="16" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>

        <!-- User List -->
        <ListBox ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" DisplayMemberPath="Username"
                 Height="140" Width="150" HorizontalAlignment="Left" Margin="10,40,0,0"/>

        <!-- User Image -->
        <Image Source="{Binding SelectedUser.ImagePath, FallbackValue='pack://application:,,,/Assets/image1.png'}" Width="100" Height="100"
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="30,50,0,0"/>

        <!-- Navigation Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50">
            <Button Content="←" Width="30" Height="25" Margin="5"/>
            <Button Content="→" Width="30" Height="25" Margin="5"/>
        </StackPanel>

        <!-- Bottom Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Content="New User" Command="{Binding AddUserCommand}" Width="80" Height="30" Margin="5"/>
            <Button Content="Delete User" Command="{Binding DeleteCommand}" Width="80" Height="30" Margin="5"/>
            <Button Content="Play" Command="{Binding PlayCommand}" Width="80" Height="30" Margin="5"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
