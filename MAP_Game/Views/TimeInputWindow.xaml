<Window x:Class="MAP_Game.View.TimeInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MAP_Game.Views"
        mc:Ignorable="d"
        Title="Set Time Limit" Height="150" Width="300">
    <Grid>
        <TextBlock Text="Enter Time Limit in Seconds:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="TimeInputTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Margin="0,30,0,0"/>
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Margin="0,0,0,20" Click="OKButton_Click"/>
    </Grid>
</Window>