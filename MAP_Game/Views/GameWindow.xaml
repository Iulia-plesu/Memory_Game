<Window xmlns:local="clr-namespace:MAP_Game.Converters"
        x:Class="MAP_Game.View.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Game"
        SizeToContent="Manual"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!-- Style for card buttons -->
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="{Binding DataContext.CardWidth, RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Setter Property="Height" Value="{Binding DataContext.CardHeight, RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#9E9E9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for timer text -->
        <Style x:Key="TimerTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Timer Display -->
        <TextBlock x:Name="TimerTextBlock" Grid.Row="0" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Style="{StaticResource TimerTextStyle}"
                   Text="{Binding GameTime, StringFormat='Time: {0:mm\\:ss}'}"/>

        <!-- Card Container -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Margin="10" Padding="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Tokens}" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              Margin="5">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding Columns}" 
                                        Rows="{Binding Rows}"
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.CardClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" 
                                    Style="{StaticResource CardButtonStyle}"
                                    IsEnabled="{Binding DataContext.IsGameActive, RelativeSource={RelativeSource AncestorType=Window}}">
                                <Button.Content>
                                    <Grid>
                                        <!-- Face-down card -->
                                        <Border Background="#FAFAFA"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                            <Image Width="{Binding DataContext.CardWidth, RelativeSource={RelativeSource AncestorType=Window}}"
                                                   Height="{Binding DataContext.CardHeight, RelativeSource={RelativeSource AncestorType=Window}}"
                                                   Source="/MAP_Game;component/Assets/FaceDownImage.jpg"
                                                   Visibility="{Binding IsFaceUp, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=False}"
                                                   Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- Face-up card content -->
                                        <Border Background="White"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Width="{Binding DataContext.CardWidth, RelativeSource={RelativeSource AncestorType=Window}}"
                                                Height="{Binding DataContext.CardWidth, RelativeSource={RelativeSource AncestorType=Window}}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Visibility="{Binding IsFaceUp, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Image Source="{Binding ImageBitmap}"
                                                   Stretch="Uniform"
                                                   Margin="10"/>
                                        </Border>
                                    </Grid>
                                </Button.Content>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>