<Window xmlns:local="clr-namespace:MAP_Game.Converters" 
        x:Class="MAP_Game.View.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Window" Height="600" Width="800">

    <Window.DataContext>
        <Binding Path="GameViewModel"/>
    </Window.DataContext>

    <Grid>
        <UniformGrid Rows="4" Columns="4">
            <!-- Display the cards (jetons) -->
            <ItemsControl ItemsSource="{Binding Cards}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding DataContext.CardClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Width="100" Height="100"
                                Background="LightGray">
                            <Button.Content>
                                <Image Source="{Binding ImagePath}" Visibility="{Binding IsFaceUp, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Button.Content>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </UniformGrid>
    </Grid>
</Window>
