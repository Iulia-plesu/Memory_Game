<Window x:Class="MAP_Game.View.CategorySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category Selection" Height="200" Width="400">
    <Grid>
        <ComboBox x:Name="CategoryComboBox" VerticalAlignment="Top" Margin="20" Height="30">
            <ComboBoxItem Content="Category 1"/>
            <ComboBoxItem Content="Category 2"/>
            <ComboBoxItem Content="Category 3"/>
        </ComboBox>

        <Button Content="Select Category" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20" Height="40" Width="120" Click="SelectCategoryButton_Click"/>
    </Grid>
</Window>
