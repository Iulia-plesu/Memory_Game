<Window x:Class="MAP_Game.View.NewUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Player" Height="300" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Image preview and navigation -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Image x:Name="ImagePreview" Width="100" Height="100" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="←" Width="30" Click="Left_Click" Margin="5"/>
                <Button Content="→" Width="30" Click="Right_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>

        <!-- Name input -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10" HorizontalAlignment="Center">
            <TextBlock Text="Enter Name:" Margin="0,0,0,5"/>
            <TextBox x:Name="NameBox" Width="200"/>
        </StackPanel>

        <!-- OK/Cancel -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="OK" Width="70" Margin="5" Click="Ok_Click"/>
            <Button Content="Cancel" Width="70" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
